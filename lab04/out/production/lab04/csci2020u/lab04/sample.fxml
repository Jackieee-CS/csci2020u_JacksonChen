<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="csci2020u.lab04.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label text="Username:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="userNameField" promptText="Enter a username"
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <PasswordField fx:id="passwordField" promptText="Enter a password"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Full Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="fullNameField" promptText="Enter your full name"
            GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="E-mail:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <TextField fx:id="emailField" promptText="Enter an e-mail address"
            GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Phone #:"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <TextField fx:id="NumberField" promptText="Enter a phone number"
            GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Date of Birth:"
           GridPane.columnIndex="0" GridPane.rowIndex="6"/>

    <DatePicker promptText="Pick a date"
            GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Button fx:id="btnClick" text="Register" onAction="#onClick"
            GridPane.columnIndex="1" GridPane.rowIndex="7"/>


</GridPane>